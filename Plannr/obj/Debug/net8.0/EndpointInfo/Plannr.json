    "/health/db": {
      "get": {
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Plannr"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ping": {
      "get": {
        "tags": [
          "Plannr"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "format": {
            "$ref": "#/components/schemas/EventFormat"
          },
          "interestedCount": {
            "type": "integer",
            "format": "int32"
          },
          "startAt": {
            "type": "string",
            "format": "date-time"
          },
          "endAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "allDay": {
            "type": "boolean"
          },
          "themeName": {
            "$ref": "#/components/schemas/EventThemeName"
          },
          "themeIcon": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "$ref": "#/components/schemas/EventLocation"
          },
          "creatorId": {
            "type": "string",
            "format": "uuid"
          },
          "creator": {
            "$ref": "#/components/schemas/Profile"
          },
          "images": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EventImage"
            },
            "nullable": true
          },
          "prompts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EventPrompt"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EventFormat": {
        "enum": [
          "inPerson",
          "online",
          "hybrid"
        ],
        "type": "string"
      },
      "EventImage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "src": {
            "type": "string",
            "nullable": true
          },
          "likes": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "EventLocation": {
        "type": "object",
        "properties": {
          "city": {
            "type": "string",
            "nullable": true
          },
          "country": {
            "type": "string",
            "nullable": true
          },
          "address": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EventPrompt": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "prompt": {
            "type": "string",
            "nullable": true
          },
          "answer": {
            "type": "string",
            "nullable": true
          },
          "likes": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "EventThemeName": {
        "enum": [
          "music",
          "art",
          "sports",
          "tech",
          "food",
          "networking",
          "health",
          "education"
        ],
        "type": "string"
      },
      "Profile": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "bio": {
            "type": "string",
            "nullable": true
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "avatarUrl": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}