{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./app/components/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@assets/*": ["./app/assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
